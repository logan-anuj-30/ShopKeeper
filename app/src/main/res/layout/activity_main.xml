<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="E-market"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/toolbar">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#E1F5FE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:background="#c788cc"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:background="#FFF"
                        android:padding="5dp"
                        android:src="@drawable/add_product" />

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:background="#03A9F4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Add Product"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="20dp"
                    android:background="#c788cc"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:background="#fff"
                        android:padding="5dp"
                        android:src="@drawable/register_user" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:background="#03A9F4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Register User"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="185dp"

                    android:background="#c788cc"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:background="#fff"
                        android:padding="5dp"
                        android:src="@drawable/view_products" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:background="#03A9F4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="View Products"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="20dp"
                    android:background="#c788cc"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:background="#fff"
                        android:padding="5dp"
                        android:src="@drawable/registered_user" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:background="#03A9F4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="View Registered Users"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:background="#c788cc"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:background="#fff"
                        android:padding="5dp"
                        android:src="@drawable/orders_to_process" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:background="#03A9F4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Orders To Process"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="20dp"
                    android:background="#c788cc"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:background="#fff"
                        android:padding="5dp"
                        android:src="@drawable/orders_already_process" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:background="#03A9F4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Orders Already Processed"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</FrameLayout>